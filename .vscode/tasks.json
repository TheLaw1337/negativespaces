{
	"version": "2.0.0",
	"command": "gulp",
	"args": [
		"--no-color",
		"--watch"
	],
	"tasks": [
		{
			"label": "pullup",
			"type": "process",
			"command": "sh",
			"args": [ "-c", "git pull upstream master" ],
			"windows": {
				"command": "cmd",
				"args": [ "/C", "git pull upstream master" ]
			},
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "kill",
			"type": "process",
			"command": "sh",
			"args": [ "-c", "pkill love || true" ],
			"windows": {
				"command": "cmd",
				"args": [ "/C", "taskkill /IM love.exe && exit /b 0" ]
			},
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "run",
			"type": "shell",
			"command": "/Applications/love.app/Contents/MacOS/love ./src",
			"windows": {
				"command": "\"C:\\Program Files (x86)\\LOVE\\love.exe\" ./src --console"
			},
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "launch",
			"type": "shell",
			"command": "",
			"windows": {
				"command": ""
			},
			"group": "test",
			"presentation": {
				"reveal": "silent",
				"panel": "shared"
			},
			"dependsOn": [ "kill", "run" ]
		}
	]
}